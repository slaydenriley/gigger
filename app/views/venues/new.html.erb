<h1>I Manage an Existing Venue</h1>
<%= flash.alert if flash.alert %>
<%= form_for @venue, :url => {:action => "join"} do |f| %>
  <%= f.label :id, "Venue" %><br/>
  <%= f.collection_select :id, Venue.all, :id, :name, prompt: true %>
  <br/>
  <%= f.submit "Join Venue" %>
<% end %>



<h1>Add a New Venue!</h1>
<%= form_for @venue do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/>
  <br/>
  <%= f.label :email %><br/>
  <%= f.email_field :email %><br/>
  <br/>
  <%= f.label :description %><br/>
  <%= f.text_area :description %><br/>
  <br/>
  <br/>
  <%= f.submit "Create Venue" %>
<% end %>
