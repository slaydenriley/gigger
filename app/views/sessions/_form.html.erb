<%= form_tag("/login", method: "post") do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= email_field_tag :email, "", placeholder: "Email" %>
  <%= password_field_tag :password, "", placeholder: "Password" %>
  <%= submit_tag "Sign In", class: 'btn btn-default' %><br/>
<% end %>
<%= button_to 'Login with Facebook', '/auth/facebook', method: "post", class:"fb-button" %>
<hr/>
<%= button_to "Sign Up", new_user_path, method: "get", class:"signup-button" %>
