<div class="account-page text-center">
<div class="user-about">
  <h1><%= @gig.name %></h1>
  <img src=<%= @gig.band.image_link %> alt="band-image" class="profile-image"/>
  <hr class="line"/>
  <h1>
  <%= @gig.date.strftime("%A, %B %e, %Y") %><br/>
  <%= @gig.date.strftime("%l:%M %p") %><br/>
  </h1>
</div>
<h1>
<%= link_to @gig.venue.name, venue_path(@gig.venue) %> |
<%= link_to @gig.band.name, band_path(@gig.band) %>
</h1>
</div>

<div class="text-center">
  <% if can? :update, @gig %>
    <%= button_to 'Edit Gig', edit_gig_path(@gig) %>
  <% end %>
  <br/>
  <% if can? :destroy, @gig %>
    <%= button_to 'Delete', @gig, method: :delete, data: { confirm: 'For real?' }  %>
  <% end %>
</div>
