<%= form_for @user do |f| %>
  <%= f.text_field :name, placeholder: "Full Name"%>
  <%= f.email_field :email, placeholder: "Email" %>
  <%= f.text_area :description, placeholder: "Description" %>
  <%= f.text_field :image, placeholder: "Profile Image Link" %>
  <%= f.password_field :password, placeholder: "Password" %>
  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %><br/>
  <%= f.label :account_type, 'Account Type' %>
  <%= f.select :account_type, options_for_select([
    ["Band Member", "band_member"],
    ["Venue Manager", "venue_manager"],
    ["Concert Goer", "concert_goer"]], @user.account_type) %><br/>
  <%= f.submit "Update", class: 'btn btn-default' %>
<% end %>
<br/>
