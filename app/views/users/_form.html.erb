<%= form_for @user do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/>
  <br/>
  <%= f.label :email %><br/>
  <%= f.email_field :email %><br/>
  <br/>
  <%= f.label :description %><br/>
  <%= f.text_area :description %><br/>
  <br/>
  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/>
  <br/>
  <%= f.label :account_type, 'Account Type' %><br/>
  <%= f.select :account_type, options_for_select([
    ["Band Member", "band_member"],
    ["Venue Manager", "venue_manager"],
    ["Concert Goer", "concert_goer"]]) %>
  <br/>
  <br/>
  <%= f.submit "Create Account" %>
<% end %>
