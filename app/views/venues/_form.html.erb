<%= form_for @venue do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/>
  <br/>
  <%= f.label :email %><br/>
  <%= f.email_field :email %><br/>
  <br/>
  <%= f.label :description %><br/>
  <%= f.text_area :description %><br/>
  <br/>
  <%= f.label :users, "Add Additional Managers/Admins (if they have an account)" %><br/>
  <%= f.collection_check_boxes :user_ids, User.where(account_type: "venue_manager"), :id, :name, include_hidden: false %><br/>
  <br/>
  <%= f.submit "Create Venue", class: 'btn btn-default' %>
<% end %>
